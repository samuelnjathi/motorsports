                <input type="file" class="form-control" name="photos">
            </div>
            <div class="col-md-6 mt-1">
                <label for="inputPhoto3" class="form-label"><b>Right Side</b></label>
                <input type="file" class="form-control" name="photos">
            </div>
            <div class="col-md-6 mt-1">
                <label for="inputPhoto4" class="form-label"><b>Left Side</b></label>
                <input type="file" class="form-control" name="photos">
            </div>
            <div class="col-md-6 mt-1">
                <label for="inputPhoto5" class="form-label"><b>Inside 1</b></label>
                <input type="file" class="form-control" name="photos">
            </div>
            <div class="col-md-6 mt-1">
                <label for="inputPhoto6" class="form-label"><b>Inside 2</b></label>
                <input type="file" class="form-control" name="photos">
            </div>
            <div class="col-md-6 mt-1">
                <label for="inputPhoto7" class="form-label"><b>Dashboard/Odometer</b></label>
                <input type="file" class="form-control" name="photos">
            </div>
            <div class="col-md-6 mt-1">
                <label for="inputPhoto8" class="form-label"><b>Engine</b></label>
                <input type="file" class="form-control" name="photos">
            </div>
            
            <div class="d-grid gap-2  mx-auto mt-3">
                <button class="btn btn-outline-warning" type="submit"><%= submit %></button>
            </div>
        </div>
        </form>
    <% }  %>
</div>
<%- include("partials/footer") %>